@model Post

<form asp-route-id="@Model.PostId" asp-action="PostUpdate" asp-controller="Post" method="post">
    <div class="mb-2 mt-5">
      <label asp-for="Title">Title</label>
      <input asp-for="Title"  value="@Model.Title" class="form-control">
      <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="mb-2 mt-5">
      <label asp-for="Image">Image (URL format please)</label>
      <input asp-for="Image"  value="@Model.Image" class="form-control">
      <span asp-validation-for="Image" class="text-danger"></span>
    </div>
    <div class="mb-2">
      <label asp-for="Medium">Medium</label>
      <input asp-for="Medium" value="@Model.Medium"  class="form-control">
      <span asp-validation-for="Medium" class="text-danger"></span>
  </div>
    <div class="mb-2">
      <label asp-for="ForSale">For Sale?</label>
      <input type="checkbox" asp-for="@Model.ForSale" value="ForSale"  checked>
      <span asp-validation-for="ForSale" class="text-danger"></span>
  </div>
  <button class="btn btn-dark">Post</button>
</form>