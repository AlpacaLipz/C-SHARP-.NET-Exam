@model User

<form  asp-action="userCreate" asp-controller="User" method="post">
    <div class="mb-2 mt-5">
        <label class="textShadowBlk" asp-for="FirstName">First Name :</label>
        <input asp-for="FirstName" class="form-control">
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    <div class="mb-2">
        <label class="textShadowBlk" asp-for="LastName"> Last Name :</label>
        <input asp-for="LastName" class="form-control">
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>
    <div class="mb-2">
        <label class="textShadowBlk" asp-for="Email">Email : </label>
        <input asp-for="Email" class="form-control">
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="mb-2">
        <label class="textShadowBlk" asp-for="Password">Password : </label>
        <input asp-for="Password" class="form-control" type="password" data-toggle="password">
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="mb-5">
        <label class="textShadowBlk" asp-for="ConfirmPassword">Confirm Password : </label>
        <input asp-for="ConfirmPassword" class="form-control">
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>
    <button class="mt-4 btn btn-dark">Register</button>
</form>